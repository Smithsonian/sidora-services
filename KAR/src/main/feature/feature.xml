<features name="edu.si.sidora.smx.bundles" xmlns="http://karaf.apache.org/xmlns/features/v1.2.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.1 http://karaf.apache.org/xmlns/features/v1.2.1">

    <!-- Sidora Dependencies -->
    <feature name="sidora-dependencies" version="${version}" >
        <bundle dependency="true" start-level='80'>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.poi/${servicemix.bundles.poi.version}</bundle>	<!-- can use the file url handler as well-->
        <bundle dependency="true" start-level='80'>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.velocity-tools/${servicemix.bundles.velocity-tools.version}</bundle> <!-- can use the file url handler as well-->
        <bundle dependency="true" start-level='80'>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.spring-beans/${servicemix.bundles.spring-beans.version}</bundle>
        <bundle dependency="true" start-level='80'>mvn:commons-codec/commons-codec/${commons-codec.bundle.version}</bundle>
        <bundle dependency="true" start-level='80'>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.commons-httpclient/${commons-httpclient.bundle.version}</bundle>
        <bundle dependency="true" start-level='80'>mvn:com.google.guava/guava/${google-guava-version}</bundle>
        <bundle dependency="true" start-level='80'>mvn:commons-dbcp/commons-dbcp/${commons-dbcp.version}</bundle>
        <bundle dependency="true" start-level='80'>wrap:mvn:mysql/mysql-connector-java/${mysql-connector.version}</bundle>
    </feature>

    <!-- Sidora Camel Dependencies -->
    <feature name="sidora-camel-dependencies" version="${camel.version}" >
        <feature version="${camel.version}" start-level='50'>camel-exec</feature>
        <feature version="${camel.version}" start-level='50'>camel-groovy</feature>
        <feature version="${camel.version}" start-level='50'>camel-velocity</feature>
        <feature version="${camel.version}" start-level='50'>camel-saxon</feature>
        <feature version="${camel.version}" start-level='50'>camel-schematron</feature>
        <feature version="${camel.version}" start-level='50'>camel-csv</feature>
        <feature version="${camel.version}" start-level='50'>camel-aws</feature>
        <feature version="${camel.version}" start-level='50'>camel-http</feature>
        <feature version="${camel.version}" start-level='50'>camel-jdbc</feature>
        <feature version="${camel.version}" start-level='50'>camel-sql</feature>
    </feature>

</features>